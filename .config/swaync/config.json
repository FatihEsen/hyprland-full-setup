{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "overlay",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 50,
  "control-center-margin-bottom": 50,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-window-width": 500,
  "control-center-width": 500,
  "control-center-height": 700,
  "fit-to-screen": false,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "dnd",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Bildirim Merkezi",
      "clear-all-button": true,
      "button-text": "Hepsini Sil"
    },
    "dnd": {
      "text": "Rahatsız Etmeyin"
    },
    "mpris": {
      "image-size": 96
    },
    "volume": {
      "label": ""
    },
    "backlight": {
      "label": "󰃠"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰖩",
          "command": "bash /home/fatih/.config/swaync/scripts/toggle_wifi.sh",
          "type": "toggle",
          "tooltip": "Bağlı: CihanMert",
          "active": true
        },
        {
          "label": "󰂲",
          "tooltip": "Bluetooth: Kapalı",
          "type": "toggle",
          "active": false,
          "command": "bash /home/fatih/.config/swaync/scripts/toggle_bt.sh"
        },
        {
          "label": "󰕾",
          "command": "pavucontrol",
          "tooltip": "Ses Ayarları"
        },
        {
          "label": "󰛳",
          "command": "kitty --class nmtui -e nmtui",
          "tooltip": "Ağ Ayarları"
        },
        {
          "label": "",
          "command": "kitty",
          "tooltip": "Terminal"
        },
        {
          "label": "󰉋",
          "command": "thunar",
          "tooltip": "Dosya Yöneticisi"
        },
        {
          "label": "󰍛",
          "command": "kitty -e btop",
          "tooltip": "Sistem Monitörü"
        },
        {
          "label": "󰐥",
          "command": "wlogout",
          "tooltip": "Güç Menüsü"
        }
      ],
      "buttons-per-row": 5
    }
  }
}