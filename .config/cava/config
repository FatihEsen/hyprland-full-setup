## cava config — Catppuccin Cappuccino (light) theme
## https://github.com/catppuccin/catppuccin

[general]
; Terminalde doğru görünmesi için 256-color desteği gereklidir
color_scheme = custom

[colors]
gradient = 1
gradient_color_1 = '#8f592d'
gradient_color_2 = '#fe8019'
gradient_color_3 = '#f9b883'
background = default

; bars separated (optional, if gradient = 0 ve separate_channels = 1)
# upper = 211     ; üst kanal → mauve
# lower = 209     ; alt kanal → flamingo

[output]
method = ncurses
channels = stereo
mono_option = average
; bars count (uyum için 64 önerilir ama terminalinize göre ayarlayın)
bars = 64

[smoothing]
; yumuşak ama canlı görünüm için:
gravity = 80
integral = 85
ignore = 10

[eq]
; Hafif vurgu, düşük frekansları güçlendirmek için:
1.0 = 1.2   ; bass boost
1.1 = 1.1
1.2 = 1.05
1.3 = 1.0
1.4 = 0.95
1.5 = 0.9
2.0 = 0.85  ; tizlerde hafif düşüş

; diğer ayarlar varsayılan olarak kalabilir
